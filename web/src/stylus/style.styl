@import 'nib'

notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

uniform-centerize()
	display flex
	flex-direction column
	justify-content center

global-reset()

//--------------------------------------------------
*, ::after, ::before
	box-sizing: border-box
	outline none

::selection,
::-moz-selection,
::-webkit-selection
	background white

a
	&:link, &:visited
		color #5200ff

	&:hover
		color white
		background #5200ff

//--------------------------------------------------
html, body
	width 100%
	height 100%
	overflow hidden
	overflow-x hidden
	overflow-y hidden

html
	font-family 'Cabin', sans-serif
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

body
	// font-size 1.6rem
	position relative
	background #e4e3d4
	line-height 1.2
	// color #21182b
	color #5200ff

//--------------------------------------------------
// canvas

.canvas-wrapper
	top 0
	right 0
	bottom 0
	left 0
	overflow hidden

.canvas
	width 100%
	height 100%
	background-coor red

//--------------------------------------------------
// page component

$page-border-width = 12px

.page-border
	position absolute
	background-color white
	mix-blend-mode difference

	&.top
		top 0
		left 0
		right $page-border-width
		height $page-border-width

	&.right
		top 0
		right 0
		bottom $page-border-width
		width $page-border-width

	&.bottom
		right 0
		bottom 0
		left $page-border-width
		height $page-border-width

	&.left
		bottom 0
		left 0
		top $page-border-width
		width $page-border-width

	&.lighten
		background-color #e8e8e8
		mix-blend-mode luminosity


.credit
	position absolute
	z-index 100
	bottom 20px
	right 23px
	letter-spacing: .15em
	font-size 1rem
