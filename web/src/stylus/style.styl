@import 'nib'

notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

uniform-centerize()
	display flex
	flex-direction column
	justify-content center

global-reset()

//--------------------------------------------------
*, ::after, ::before
	box-sizing: border-box
	outline none

::selection,
::-moz-selection,
::-webkit-selection
	background white

[v-cloak]
	visibility hidden

//--------------------------------------------------
html, body
	width 100%
	height 100%
	overflow hidden

html
	// font-family 'Cabin', sans-serif
	font-smoothing antialiased
	-moz-osx-font-smoothing: grayscale
	font-size 10px

body
	font-size 1.6rem
	background: #0a0a0a
	line-height 1.2
